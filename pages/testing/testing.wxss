/* pages/xiaoxi/xiaoxi.wxss */
.pape{background:#f3f2f2;}
.titletitle{width:690rpx;text-align:left;margin:0 auto;font-size:36rpx;font-weight:900;height:90rpx;}
.swiper{width: 100%;height:320rpx;background-color:#fff;}
.swiper image{width:100%;height:100%;}
.form{padding:0 4.6%;background:#fff;}
.li{padding:20rpx 0;border-bottom:1px solid #f3f2f2;overflow:auto;}
.li text{width:25%;float:left;font-weight:700;font-size:28rpx;}
.li input{width:75%;float:left;font-size:28rpx;color:#656565;}
.form2{padding:0 4.6%;background:#fff;margin-top:20rpx;}
.li:last-child{border-bottom:none;}
.li image{width:152rpx;height:152rpx;}
.form3{background:#fff;margin-top:20rpx;padding:40rpx 0;}
.form3 button{width:41.5%;border-radius:45px;color:#fff;background:linear-gradient(to right,#8db843,#add16f);border:none;font-size:28rpx;}
button::after{border:none;}
.form3 button.none{background:#dedede;color:#fff;}